{{#if user}}
	<p class='text-wild-sand-500 mb-4 mx-4'>Welcome back {{this.user.username}}</p>
	<a class='py-2 px-4 rounded bg-wild-sand-500 text-wild-sand-50 mx-4 hover:bg-wild-sand-600' href='/create-message'>Create a message</a>
	<div class='flex flex-col gap-4 mt-4 max-w-md mx-auto'>
    	{{#each messages}}
    		<div class='bg-white p-4 rounded-lg shadow-lg'>
    	    	<p class='text-wild-sand-600'>User: {{#unless ../user.member}}???{{else}}{{this.user.username}}{{/unless}}</p>
    	    	<p class='text-wild-sand-600'>Text: {{this.text}}</p>
    	    	<p class='text-wild-sand-600'>Created At: {{this.created_date_formatted}}</p>
    	    	<p class='text-wild-sand-600'>Title: {{this.title}}</p>
    	    {{#unless ../user.member}}
    	    	<p class='text-wild-sand-400'>Become a member to see the author of the message</p>
    	    {{/unless}}
    		</div>
    	{{/each}}
	</div>
{{else}}
	<h1 class='text-wild-sand-600'>{{title}}</h1>
	<p class='text-wild-sand-600'>Welcome to {{title}}</p>
	<div class='flex flex-col gap-4 mt-4 max-w-md mx-auto'>

    	{{#each messages}}
    		<div class='mt-4 bg-white p-4  rounded-lg shadow-lg'>
    	    	<p class='text-wild-sand-600'>User: ???</p>
    	    	<p class='text-wild-sand-600'>Title: {{title}}</p>
    	    	<p class='text-wild-sand-600'>Text: {{text}}</p>
    	    	<p class='text-wild-sand-600'>Created At: {{created_date_formatted}}</p>
    		</div>
    	{{/each}}
	</div>
{{/if}}
