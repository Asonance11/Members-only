<div class='flex flex-col items-center justify-center mt-10'>
	<h2 class='text-2xl text-wild-sand-500 mb-4'>Log in</h2>

	<form
		class='max-w-md mx-auto p-4 border rounded-lg shadow-xl'
		action='/login'
		method='post'
	>
		<div class='mb-4'>
			<label for='username' class='text-wild-sand-500'>Username</label>
			<input
				type='text'
				id='username'
				name='username'
				required
				class='w-full px-3 py-2 border border-wild-sand-300 rounded-lg focus:outline-none focus:border-blue-500'
			/>
		</div>
		<div class='mb-4'>
			<label for='password' class='text-wild-sand-500'>Password</label>
			<input
				type='password'
				id='password'
				name='password'
				required
				class='w-full px-3 py-2 border border-wild-sand-300 rounded-lg focus:outline-none focus:border-blue-500'
			/>
		</div>
		<p class='mb-4 text-wild-sand-500'>Don't have an account?
			<a
				href='/signup'
				class='text-wild-sand-800 hover:underline'
			>Signup</a></p>
		<div class='mb-4'>
			<button
				type='submit'
				class='w-full bg-wild-sand-500 text-white p-2 rounded-lg hover:bg-wild-sand-600'
			>
				Log in
			</button>

		</div>
	</form>

	{{#if errors.length}}
		<div
			class='max-w-md mt-4 p-4 border border-red-300 rounded-lg bg-red-100 text-red-700'
		>
			<p class='font-semibold text-red-500 mb-2'>Error(s) occurred:</p>
			<ul class='list-disc ml-6'>
				{{#each errors}}
					<li>{{this.msg}}</li>
				{{/each}}
			</ul>
		</div>
	{{/if}}
	<p class='font-semibold text-red-500 mb-2'>{{error}}</p>
</div>